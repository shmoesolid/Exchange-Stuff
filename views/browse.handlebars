
{{#if item.id}}
    <div class='container-color'>
        <div class="container text-center">
            <div class="row">
                <div class="col-md-5">
                    <h3>{{item.title}}</h3>
                    <img src='http://lorempixel.com/150/150/technics' />
                    <p>{{item.description}}</p>
                </div>
                <div class="col-md-2">vs</div>
                <div class="col-md-5" id="compare-item"></div>
            </div>
            <div class="row">
                <div class="col text-right">
                    <button id="refuse-trade">Refuse</button>
                </div>
                <div class="col"></div>
                <div class="col text-left">
                    <button id="accept-trade">Accept</button>
                </div>
            </div>
        </div>
    </div>

    <!-- setup passing some item data for browse.js -->
    <script type="text/javascript" >
        console.log("{{item.deniedItems}}");

        var myItemObj = {};
        myItemObj.id = {{item.id}};
        myItemObj.minValue = {{item.minValue}};
        myItemObj.maxValue = {{item.maxValue}};
        myItemObj.deniedItems = "{{item.deniedItems}}";
        if (myItemObj.deniedItems == "") myItemObj.deniedItems = "{}";
        myItemObj.deniedItems = Object.values(JSON.parse(myItemObj.deniedItems));
        
    </script>
{{/if}}

<script type="text/javascript" src="js/browse.js"></script>